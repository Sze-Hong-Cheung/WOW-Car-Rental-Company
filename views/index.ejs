    <label for="inputEmail" class="sr-only">Email address</label>
    <input name="email" type="email" id="inputEmail" class="form-control <% if (pageStatus == "invaild") { %>is-invalid<% } %>" placeholder="Email address"
        required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input name="password" type="password" id="inputPassword" class="form-control <% if (pageStatus == "invaild") { %>is-invalid<% } %>" placeholder="Password">
    <% if (pageStatus == "invaild") { %>
    <div class="invalid-feedback">
        Invaild email or password.
    </div>
    <% } %>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
