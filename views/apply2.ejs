    <link rel='stylesheet' type='text/css' href="/css/signin.css">
</head>

<body class="text-center" style="display: block">
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#">World On Wheels</a>
            <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>-->
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <!--<li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>-->
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <span class="" style="color:white;margin-right: 20px;">Username </span>
                    <a href="logout" class="my-2 my-sm-0" type="submit" style="color: white;">Sign Out</a>
                </form>
            </div>
        </nav>
    </header>
    <main role="main">
        <div class="container">
            <div class="card" style="margin: 50px auto 50px auto; max-width: 700px;">
                <h5 class="card-header">Select Vehicle</h5>

                <div class="card-body">
                    <form action="/apply2" method="get">
                        <div class="form-row" style="padding-left: 5px;">
                            <p> Availible vehicle at Pickup Location:
                                <%= apply1History.pickup_street + ', ' + apply1History.pickup_city + ', ' + apply1History.pickup_state %>
                            </p>
                        </div>
                        <div class="form-row" style="text-align: left;">
                            <div class="form-group col-md-5">
                                <label for="inputVehicleclass">Vehicle Class</label>
                                <select name="class_no" id="class_no" class="form-control">
                                    <option value="" selected>All</option>
                                    <% for (let i=1; i<vehicleClassArr.length; i++) { %>
                                    <option value=<%= i %> <%= class_no == i ? "Selected" : "" %>>
                                        <%= vehicleClassArr[i] %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group col-md-5">
                                <label for="inputMake">Make</label>
                                <input name="make" type="text" class="form-control" id="make" value=<%= make %>>
                            </div>
                            <div class="form-group col-md-2" style="margin-top: 32px; text-align: right;">
                                <button class="btn btn-info" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                    <form action="" method="post">
                        <select name="vin" class="custom-select" size="8" required>
                            <% if (results != undefined) {
                            for (let i=0; i<results.length; i++) { %>
                            <option value=<%= results[i].vin %>>
                                <%= results[i].make + ' ' + results[i].model + '' + results[i].year %></option>
                            <% } }%>
                        </select>
                        <div class="form-group col-md-12" style="margin-top: 20px; text-align: center;">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>
</body>

</html>